---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  price: string;
  duration: string;
  image: string;
}

const { title, price, duration, image } = Astro.props;
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <!-- Background Layer -->
    <div 
      class="absolute inset-0"
      style={`background-image: url('${image}'); background-size: cover; background-position: center; background-repeat: no-repeat;`}
    ></div>
    
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/60"></div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold text-white leading-tight">
          {title}
        </h1>
      </div>
    </div>
  </section>

  <!-- Service Content -->
  <section class="bg-white py-16">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="lg:col-span-2">
            <slot />
          </div>

          <!-- Service Info Box -->
          <div class="lg:col-span-1">
            <div class="bg-[#F8F9FA] rounded-lg p-8 sticky top-32">
              <h3 class="text-2xl font-bold mb-6">Service Details</h3>
              
              <div class="space-y-4 mb-8">
                <div>
                  <p class="text-gray-600 text-sm uppercase tracking-wide">Price</p>
                  <p class="text-3xl font-bold text-salon-darkblue">{price}</p>
                </div>
                
                <div>
                  <p class="text-gray-600 text-sm uppercase tracking-wide">Duration</p>
                  <p class="text-xl font-semibold">{duration}</p>
                </div>
              </div>

              <a href="/booking" class="btn-primary w-full text-center inline-block">
                Book This Service
              </a>
              
              <div class="mt-6 pt-6 border-t border-gray-200">
                <p class="text-sm text-gray-600">
                  Ready to transform your hair? Book your appointment with Melissa today.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-[#D3E4FD] bg-opacity-20 py-16">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Questions About This Service?</h2>
        <p class="text-gray-700 mb-8">
          Contact Melissa to discuss your hair goals and find the perfect service for you.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/contact" class="btn-secondary">
            Get in Touch
          </a>
          <a href="/services" class="bg-white text-gray-800 font-medium py-3 px-6 rounded-md hover:bg-gray-100 transition duration-300 ease-in-out">
            View All Services
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>