---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hair Salon Service Locations | Hair By Melissa - Kaukapakapa, Helensville, Wainui & Waitoki">
  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center overflow-hidden hero-bg-home">
      <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60 z-10"></div>
      <div class="container-custom relative z-20">
        <div class="max-w-3xl">
          <h1 class="text-5xl md:text-6xl font-bold text-white leading-tight mb-6">
            Hair Salon <span class="gradient-text">Service Locations</span>
          </h1>
          <p class="text-xl text-white/90 mb-8">
            Professional hair services across North Auckland. From our boutique salon in Kaukapakapa to mobile services in Helensville, Wainui & Waitoki.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/booking" class="btn-primary magnetic-hover">
              Book Your Appointment
            </a>
            <a href="/contact" class="btn-secondary magnetic-hover">
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Salon Location -->
    <section class="py-20 bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Main Salon</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Experience premium hair services at our boutique salon in the heart of Kaukapakapa
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <div class="bg-gradient-to-br from-[#D3E4FD] to-[#FFDEE2] rounded-2xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="h-6 w-6 text-salon-darkblue mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Kaukapakapa Salon
              </h3>
              
              <div class="space-y-4 mb-6">
                <div class="flex items-start">
                  <svg class="h-5 w-5 text-salon-darkblue mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  </svg>
                  <div>
                    <p class="text-gray-800 font-medium">Magnolia Lane, Kaukapakapa</p>
                    <p class="text-gray-600">Rural Auckland, New Zealand</p>
                  </div>
                </div>

                <div class="flex items-center">
                  <svg class="h-5 w-5 text-salon-darkblue mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <a href="tel:0275201613" class="text-gray-800 hover:text-salon-darkblue transition-colors">
                    027 520 1613
                  </a>
                </div>

                <div class="flex items-center">
                  <svg class="h-5 w-5 text-salon-darkblue mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <a href="mailto:melissa@hairbymelissa.co.nz" class="text-gray-800 hover:text-salon-darkblue transition-colors">
                    melissa@hairbymelissa.co.nz
                  </a>
                </div>
              </div>

              <div class="pt-4 border-t border-white/30">
                <p class="text-sm text-gray-700 mb-2 font-medium">Operating Hours:</p>
                <p class="text-sm text-gray-600">By Appointment Only</p>
                <p class="text-sm text-gray-600">Tuesday - Saturday</p>
              </div>
            </div>
          </div>

          <div class="space-y-6">
            <h4 class="text-xl font-bold text-gray-900">Full Service Hair Salon</h4>
            <p class="text-gray-600">
              Our main salon in Kaukapakapa offers the complete Hair By Melissa experience in a relaxing, 
              boutique environment. All our premium services are available here, from color transformations 
              to keratin treatments.
            </p>

            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-50 rounded-lg p-4">
                <h5 class="font-semibold text-gray-900 mb-2">Services Available</h5>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>• All Hair Coloring</li>
                  <li>• Keratin Treatments</li>
                  <li>• Cut & Styling</li>
                  <li>• Special Occasions</li>
                </ul>
              </div>

              <div class="bg-gray-50 rounded-lg p-4">
                <h5 class="font-semibold text-gray-900 mb-2">Amenities</h5>
                <ul class="text-sm text-gray-600 space-y-1">
                  <li>• Private Consultation</li>
                  <li>• Premium Products</li>
                  <li>• Comfortable Seating</li>
                  <li>• Parking Available</li>
                </ul>
              </div>
            </div>

            <div class="flex gap-3">
              <a href="/booking" class="btn-primary">
                Book Appointment
              </a>
              <a href="/locations/kaukapakapa" class="btn-secondary">
                Learn More
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas -->
    <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Service Areas</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            We proudly serve clients across North Auckland with mobile services and convenient scheduling
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Helensville -->
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6 group">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-[#D3E4FD] to-[#FFDEE2] rounded-lg flex items-center justify-center mr-4 group-hover:scale-105 transition-transform">
                <svg class="h-6 w-6 text-salon-darkblue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Helensville</h3>
            </div>
            
            <div class="space-y-3 mb-6">
              <p class="text-gray-600 text-sm">Mobile hair services available</p>
              <div class="flex items-center text-sm">
                <svg class="h-4 w-4 text-salon-darkblue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-gray-600">15 minutes from Kaukapakapa</span>
              </div>
              <div class="flex items-center text-sm">
                <svg class="h-4 w-4 text-salon-darkblue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-gray-600">Most services available</span>
              </div>
            </div>

            <div class="flex gap-2">
              <a href="/locations/helensville" class="btn-secondary text-sm flex-1 text-center">
                Learn More
              </a>
              <a href="/booking" class="btn-primary text-sm flex-1 text-center">
                Book Now
              </a>
            </div>
          </div>

          <!-- Wainui -->
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6 group">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-[#D3E4FD] to-[#FFDEE2] rounded-lg flex items-center justify-center mr-4 group-hover:scale-105 transition-transform">
                <svg class="h-6 w-6 text-salon-darkblue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Wainui</h3>
            </div>
            
            <div class="space-y-3 mb-6">
              <p class="text-gray-600 text-sm">Mobile hair services available</p>
              <div class="flex items-center text-sm">
                <svg class="h-4 w-4 text-salon-darkblue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-gray-600">20 minutes from Kaukapakapa</span>
              </div>
              <div class="flex items-center text-sm">
                <svg class="h-4 w-4 text-salon-darkblue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-gray-600">Selected services available</span>
              </div>
            </div>

            <div class="flex gap-2">
              <a href="/locations/wainui" class="btn-secondary text-sm flex-1 text-center">
                Learn More
              </a>
              <a href="/booking" class="btn-primary text-sm flex-1 text-center">
                Book Now
              </a>
            </div>
          </div>

          <!-- Waitoki -->
          <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow p-6 group">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-[#D3E4FD] to-[#FFDEE2] rounded-lg flex items-center justify-center mr-4 group-hover:scale-105 transition-transform">
                <svg class="h-6 w-6 text-salon-darkblue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900">Waitoki</h3>
            </div>
            
            <div class="space-y-3 mb-6">
              <p class="text-gray-600 text-sm">Mobile hair services available</p>
              <div class="flex items-center text-sm">
                <svg class="h-4 w-4 text-salon-darkblue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-gray-600">25 minutes from Kaukapakapa</span>
              </div>
              <div class="flex items-center text-sm">
                <svg class="h-4 w-4 text-salon-darkblue mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-gray-600">Selected services available</span>
              </div>
            </div>

            <div class="flex gap-2">
              <a href="/locations/waitoki" class="btn-secondary text-sm flex-1 text-center">
                Learn More
              </a>
              <a href="/booking" class="btn-primary text-sm flex-1 text-center">
                Book Now
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Area Map -->
    <section class="py-20 bg-white">
      <div class="container-custom">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Service Radius</h2>
          <p class="text-lg text-gray-600 max-w-3xl mx-auto">
            Serving North Auckland communities with mobile services and our central Kaukapakapa salon
          </p>
        </div>

        <div class="bg-gradient-to-br from-[#D3E4FD]/20 to-[#FFDEE2]/20 rounded-2xl p-8">
          <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Travel Times & Services</h3>
              
              <div class="space-y-4">
                <div class="flex items-center justify-between p-4 bg-white rounded-lg shadow-sm">
                  <div class="flex items-center">
                    <div class="w-3 h-3 bg-salon-darkblue rounded-full mr-3"></div>
                    <span class="font-medium text-gray-900">Kaukapakapa (Salon)</span>
                  </div>
                  <span class="text-sm text-gray-600">All Services • 0 mins</span>
                </div>

                <div class="flex items-center justify-between p-4 bg-white rounded-lg shadow-sm">
                  <div class="flex items-center">
                    <div class="w-3 h-3 bg-[#FFDEE2] rounded-full mr-3"></div>
                    <span class="font-medium text-gray-900">Helensville</span>
                  </div>
                  <span class="text-sm text-gray-600">Most Services • 15 mins</span>
                </div>

                <div class="flex items-center justify-between p-4 bg-white rounded-lg shadow-sm">
                  <div class="flex items-center">
                    <div class="w-3 h-3 bg-[#D3E4FD] rounded-full mr-3"></div>
                    <span class="font-medium text-gray-900">Wainui</span>
                  </div>
                  <span class="text-sm text-gray-600">Selected Services • 20 mins</span>
                </div>

                <div class="flex items-center justify-between p-4 bg-white rounded-lg shadow-sm">
                  <div class="flex items-center">
                    <div class="w-3 h-3 bg-gray-300 rounded-full mr-3"></div>
                    <span class="font-medium text-gray-900">Waitoki</span>
                  </div>
                  <span class="text-sm text-gray-600">Selected Services • 25 mins</span>
                </div>
              </div>

              <div class="mt-8 p-6 bg-white rounded-lg">
                <h4 class="font-semibold text-gray-900 mb-3">Mobile Service Information</h4>
                <ul class="text-sm text-gray-600 space-y-2">
                  <li>• Mobile services subject to minimum booking requirements</li>
                  <li>• Travel time included in service duration</li>
                  <li>• Some treatments may require salon visit for optimal results</li>
                  <li>• Book in advance for mobile appointments</li>
                </ul>
              </div>
            </div>

            <div class="lg:text-center">
              <div class="bg-white rounded-xl shadow-lg p-6">
                <h4 class="font-semibold text-gray-900 mb-4">Ready to Book?</h4>
                <p class="text-gray-600 mb-6">
                  Contact us to discuss your location and service needs. We'll find the perfect solution for you.
                </p>
                
                <div class="space-y-3">
                  <a href="/booking" class="btn-primary block text-center">
                    Book Your Appointment
                  </a>
                  
                  <div class="flex gap-3">
                    <a href="tel:0275201613" class="btn-secondary flex-1 text-center text-sm">
                      Call Now
                    </a>
                    <a href="/contact" class="btn-secondary flex-1 text-center text-sm">
                      Get Directions
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .hero-bg-home {
    background-image: url('/images/optimized/salon-exterior_800.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  @media (min-width: 1024px) {
    .hero-bg-home {
      background-image: url('/images/optimized/salon-exterior_1200.webp');
    }
  }
  
  @media (min-width: 1920px) {
    .hero-bg-home {
      background-image: url('/images/optimized/salon-exterior_1920.webp');
    }
  }
</style>