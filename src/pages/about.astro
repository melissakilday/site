---
import Layout from '../layouts/Layout.astro';
import TrustSignals from '../components/TrustSignals.astro';
import TestimonialCard from '../components/TestimonialCard.astro';

const features = [
  {
    title: "Expert Colorist",
    description: "Melissa brings over 5 years of expertise in hair coloring, specializing in natural-looking highlights, balayage, and color corrections.",
    icon: "sparkles"
  },
  {
    title: "Premium Products",
    description: "We use only the highest quality professional hair care products to ensure the best results and maintain your hair's health.",
    icon: "star"
  },
  {
    title: "Personalized Service",
    description: "Every client receives individualized attention and customized treatments tailored to their unique hair type and lifestyle.",
    icon: "heart"
  },
  {
    title: "Boutique Experience",
    description: "Enjoy a tranquil, intimate salon atmosphere where you can truly relax and feel pampered during your visit.",
    icon: "flower"
  }
];
---

<Layout 
  title="About Hair By Melissa | Expert Hairdresser in Kaukapakapa"
  description="Meet Melissa, your expert hairdresser in Kaukapakapa with 5+ years experience. Specializing in keratin treatments, balayage & color. Serving North Auckland including Helensville, Wainui & Waitoki."
  keywords="about hair by melissa, hairdresser kaukapakapa, melissa hair stylist, north auckland hair salon, hair expert helensville, professional hairdresser wainui"
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <!-- Background Layer with Parallax -->
    <div 
      class="absolute inset-0 parallax-bg"
      style="background-image: url('/images/optimized/about-hero-bg_1920.webp'); background-size: cover; background-position: center; background-repeat: no-repeat;"
      data-speed="0.5"
    ></div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/60"></div>
    
    <!-- Animated Blob -->
    <div class="absolute bottom-10 right-10 w-96 h-96 bg-gradient-to-br from-[#D3E4FD]/20 to-[#FFDEE2]/20 rounded-full morph-blob blur-3xl"></div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-2xl animate-fade-in">
        <h1 class="text-5xl font-bold text-white leading-tight">
          About Melissa - Expert Hairdresser in Kaukapakapa
        </h1>
        <p class="text-xl text-white mt-6">
          Your trusted hair specialist serving Kaukapakapa, Helensville, Wainui & Waitoki with premium salon services
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="bg-white py-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-bold mb-6">Our Story</h2>
          <p class="text-gray-700 mb-4">
            Nestled in the charming Peak Village of Kaukapakapa, Hair By Melissa is more than just a salon – it's your personal sanctuary for hair transformation and relaxation. Located in rural Auckland, our boutique salon offers a peaceful escape from the hustle and bustle of city life.
          </p>
          <p class="text-gray-700 mb-4">
            With over 5 years of experience in the hair industry, Melissa has built a reputation for excellence in hair coloring, styling, and treatments. Her passion for creating beautiful, healthy hair shines through in every service, from subtle highlights to complete color transformations.
          </p>
          <p class="text-gray-700 mb-6">
            At Hair By Melissa, we believe that great hair isn't just about the latest trends – it's about finding the perfect style that makes you feel confident and beautiful every day. Our intimate salon setting ensures you receive the personal attention you deserve, with services tailored specifically to your hair's unique needs and your lifestyle.
          </p>
          <div class="flex gap-4">
            <a href="/booking" class="btn-primary">Book Your Visit</a>
            <a href="/services" class="btn-secondary">Explore Services</a>
          </div>
        </div>
        <div class="relative animate-scale">
          <div class="relative overflow-hidden rounded-lg shadow-2xl group">
            <img 
              src="/images/optimized/melissa-professional_800.webp" 
              alt="Melissa - Professional Hairdresser at Hair By Melissa"
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="absolute -bottom-6 -right-6 bg-gradient-to-br from-[#D3E4FD] to-[#FFDEE2] rounded-lg p-6 shadow-xl transform hover:scale-105 transition-transform duration-300">
            <p class="text-2xl font-bold text-gray-800">5+ Years</p>
            <p class="text-gray-700">of Excellence</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-[#F8F9FA] py-20">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-4xl font-bold mb-4">What Sets Us Apart</h2>
        <p class="text-gray-700">
          Experience the difference of a truly personalized salon experience in a tranquil rural setting.
        </p>
      </div>
      
      <!-- Trust Signals -->
      <div class="mb-12">
        <TrustSignals variant="grid" showCertification={true} />
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {features.map((feature, index) => (
          <div 
            class="bg-white rounded-lg p-8 text-center card-shadow animate-slide-up"
            style={`animation-delay: ${index * 100}ms`}
          >
            {feature.icon === "sparkles" && (
              <svg class="h-12 w-12 text-salon-darkblue mb-4 mx-auto" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"></path>
                <path d="M5 3v4"></path>
                <path d="M19 17v4"></path>
                <path d="M3 5h4"></path>
                <path d="M17 19h4"></path>
              </svg>
            )}
            {feature.icon === "star" && (
              <svg class="h-12 w-12 text-salon-darkblue mb-4 mx-auto" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            )}
            {feature.icon === "heart" && (
              <svg class="h-12 w-12 text-salon-darkblue mb-4 mx-auto" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7z"></path>
              </svg>
            )}
            {feature.icon === "flower" && (
              <svg class="h-12 w-12 text-salon-darkblue mb-4 mx-auto" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12 5a3 3 0 1 1 3 3m-3-3a3 3 0 1 0-3 3m3-3v1m0 7a3 3 0 1 1 3 3m-3-3a3 3 0 1 0-3 3m3-3v-1"></path>
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M12 19a3 3 0 1 1 3-3m-3 3a3 3 0 1 0-3-3m3 3v1"></path>
              </svg>
            )}
            <h3 class="text-xl font-bold mb-3">{feature.title}</h3>
            <p class="text-gray-700">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="bg-white py-20">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-8">Our Philosophy</h2>
        <div class="bg-[#D3E4FD] bg-opacity-20 rounded-lg p-12">
          <p class="text-xl text-gray-800 italic leading-relaxed">
            "Beautiful hair isn't just about following trends – it's about understanding each client's unique features, lifestyle, and personality. My goal is to create a look that not only makes you feel amazing when you leave the salon but continues to work for you every day. In our peaceful rural setting, away from the rush of city life, we take the time to truly listen, consult, and craft the perfect style just for you."
          </p>
          <p class="text-lg font-semibold mt-6">- Melissa</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Section -->
  <section class="bg-[#F8F9FA] py-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-bold mb-6">Find Us in Beautiful Kaukapakapa</h2>
          <p class="text-gray-700 mb-4">
            Located in the scenic Peak Village, our salon offers a peaceful retreat where you can enjoy premium hair services in a relaxed, unhurried atmosphere. The rural setting provides the perfect backdrop for your transformation journey.
          </p>
          <div class="space-y-4 mb-6">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-salon-darkblue mr-3 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <div>
                <p class="font-semibold">Address</p>
                <p class="text-gray-700">Magnolia Lane, Kaukapakapa, Rural Auckland, NZ</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-6 w-6 text-salon-darkblue mr-3 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M8 2v4"></path>
                <path d="M16 2v4"></path>
                <rect width="18" height="18" x="3" y="4" rx="2"></rect>
                <path d="M3 10h18"></path>
              </svg>
              <div>
                <p class="font-semibold">Appointments</p>
                <p class="text-gray-700">By appointment only - Book online or call</p>
              </div>
            </div>
            <div class="flex items-start">
              <svg class="h-6 w-6 text-salon-darkblue mr-3 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
                <path d="M12 18h.01"></path>
              </svg>
              <div>
                <p class="font-semibold">Parking</p>
                <p class="text-gray-700">Ample free parking available on-site</p>
              </div>
            </div>
          </div>
          <a href="/contact" class="btn-primary">Get Directions</a>
        </div>
        <div class="rounded-lg overflow-hidden shadow-xl">
          <img 
            src="/images/optimized/kaukapakapa-village_800.webp" 
            alt="Peak Village Kaukapakapa"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="bg-white py-20">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-4xl font-bold mb-4">What Our Clients Say</h2>
        <p class="text-gray-700">
          Real testimonials from satisfied clients across North Auckland.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <TestimonialCard 
          name="Sarah Johnson"
          location="Kaukapakapa"
          service="Keratin Treatment"
          testimonial="Melissa transformed my frizzy hair into silky smooth locks! The keratin treatment has been life-changing - I save so much time styling my hair now."
        />
        <TestimonialCard 
          name="Emma Wilson"
          location="Helensville"
          service="Balayage"
          testimonial="The balayage Melissa created is absolutely stunning. She really understood my vision and the color grows out so naturally. Highly recommend!"
        />
        <TestimonialCard 
          name="Rachel Thompson"
          location="Wainui Village"
          service="Highlights"
          testimonial="Melissa is a true artist with color. My highlights look so natural and professional. The salon atmosphere is so relaxing too."
        />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-[#FFDEE2] bg-opacity-30 py-20">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-bold mb-6">Ready to Experience the Difference?</h2>
      <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
        Join our family of satisfied clients who trust us with their hair care needs. Book your appointment today and discover why Hair By Melissa is the preferred choice for premium hair services in rural Auckland.
      </p>
      <div class="flex gap-4 justify-center">
        <a href="/booking" class="btn-primary">Book Now</a>
        <a href="/services" class="bg-white text-black font-medium py-3 px-6 rounded-md hover:bg-gray-100 transition duration-300 ease-in-out">View Services</a>
      </div>
    </div>
  </section>
</Layout>