---
import Layout from '../layouts/Layout.astro';
import TrustSignals from '../components/TrustSignals.astro';
import OptimizedImage from '../components/OptimizedImage.astro';

const services = [
  { 
    name: "Keratin Treatments", 
    price: "$180", 
    icon: "sparkles",
    url: "/services/keratin-treatments",
    linkText: "Learn about keratin treatments"
  },
  { 
    name: "Women's Cut & Finish", 
    price: "$50", 
    icon: "scissors",
    url: "/services/womens-cut-finish",
    linkText: "Learn about women's cuts & styling"
  },
  { 
    name: "Partial Foils", 
    price: "$90", 
    icon: "scissors",
    url: "/services/partial-foils", 
    linkText: "Learn about partial foils"
  },
  { 
    name: "Half Head of Highlights", 
    price: "$140", 
    icon: "scissors",
    url: "/services/half-head-highlights",
    linkText: "Learn about half head highlights"
  },
  { 
    name: "Full Head of Highlights", 
    price: "$180", 
    icon: "scissors",
    url: "/services/full-head-highlights",
    linkText: "Learn about full head highlights" 
  },
  { 
    name: "Permanent Tint & Touch Up", 
    price: "$90", 
    icon: "scissors",
    url: "/services/permanent-tint-touch-up",
    linkText: "Learn about permanent tint & touch up"
  },
];

const reviews = [
  {
    id: 1,
    name: "Sarah Johnson",
    review: "Melissa transformed my dull, lifeless hair into a vibrant masterpiece. The keratin treatment was a game-changer for my frizzy hair!",
    rating: 5,
  },
  {
    id: 2,
    name: "Jessica Miller",
    review: "I've been to many salons, but none compare to Hair By Melissa. The balayage she did on my hair has received so many compliments.",
    rating: 5,
  },
  {
    id: 3,
    name: "Rachel Thompson",
    review: "Melissa takes the time to understand exactly what you want. My highlights look so natural and blend perfectly with my base color.",
    rating: 5,
  },
];

const galleryImages = [
  {
    src: "/images/optimized/balayage-transformation_800.webp",
    alt: "Professional balayage hair transformation showing natural-looking highlights and color depth"
  },
  {
    src: "/images/optimized/highlights-before-after_800.webp",
    alt: "Before and after hair highlights transformation by Hair By Melissa showing dimensional color"
  },
  {
    src: "/images/optimized/melissa-professional_800.webp",
    alt: "Melissa professional hair stylist at Hair By Melissa salon in Kaukapakapa"
  },
  {
    src: "/images/optimized/salon-interior_800.webp",
    alt: "Hair By Melissa salon interior showing professional styling station and modern decor"
  }
];
---

<Layout 
  title="Expert Hairdresser Kaukapakapa | Hair Salon North Auckland"
  description="Hair By Melissa - Premier hairdresser in Kaukapakapa offering smoothing treatments, custom color, precision cuts & hair transformations. Serving Helensville, Wainui & Waitoki. Book today!"
  keywords="hairdresser kaukapakapa, hair salon kaukapakapa, keratin treatment north auckland, balayage kaukapakapa, highlights helensville, hair coloring wainui, haircut waitoki, best hairdresser rodney district"
>
  <!-- Core Web Vitals: Preload compressed hero images -->
  <link slot="head" rel="preload" as="image" href="/images/optimized/salon-exterior_640q35.webp" media="(max-width: 767px)" />
  <link slot="head" rel="preload" as="image" href="/images/optimized/salon-exterior_1280q40.webp" media="(min-width: 768px)" />
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Background Layer with Parallax -->
    <div class="absolute inset-0 hero-bg-home parallax-bg" data-speed="0.5"></div>
    
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
    
    <!-- Animated Blob -->
    <div class="absolute top-20 right-10 w-96 h-96 bg-gradient-to-br from-[#D3E4FD]/20 to-[#FFDEE2]/20 rounded-full morph-blob blur-3xl"></div>
    
    <div class="container-custom relative z-10 mt-20">
      <div class="max-w-2xl animate-fade-in">
        <h1 class="text-5xl md:text-6xl font-bold text-white leading-tight">
          Premium <span class="gradient-text">Hairdresser in Kaukapakapa</span> Auckland
        </h1>
        <p class="text-xl text-white mt-6">
          Expert hair transformations, smoothing treatments, and custom styling in North Auckland. Melissa creates stunning results for clients from Kaukapakapa, Helensville, Wainui & Waitoki with 5+ years of experience.
        </p>
        <div class="mt-8 flex flex-wrap gap-4">
          <a href="/booking" class="btn-primary magnetic-hover">
            Book Now
          </a>
          <a href="/services" class="bg-transparent border-2 border-white text-white font-medium py-3 px-6 rounded-md hover:bg-white hover:text-black transition duration-300 ease-in-out glow-hover">
            Explore Services
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Preview Section -->
  <section class="bg-white section-padding">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-4xl font-bold">Our Premium Services</h2>
        <p class="text-gray-600 mt-4">
          Discover our range of high-quality hair services designed to transform, enhance, and maintain your beautiful locks.
        </p>
      </div>
      
      <!-- Trust Signals -->
      <div class="mb-12">
        <TrustSignals variant="horizontal" />
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div 
            class="glass-card rounded-lg p-8 animate-slide-up card-hover-3d"
            style={`animation-delay: ${index * 100}ms`}
          >
            {service.icon === "sparkles" ? (
              <svg class="h-10 w-10 text-[#1EAEDB] mb-4 transform transition-transform duration-300 hover:rotate-12" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"></path>
                <path d="M5 3v4"></path>
                <path d="M19 17v4"></path>
                <path d="M3 5h4"></path>
                <path d="M17 19h4"></path>
              </svg>
            ) : (
              <svg class="h-10 w-10 text-[#1EAEDB] mb-4 transform transition-transform duration-300 hover:rotate-12" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="6" cy="6" r="3"></circle>
                <circle cx="6" cy="18" r="3"></circle>
                <line x1="20" y1="4" x2="8.12" y2="15.88"></line>
                <line x1="14.47" y1="14.48" x2="20" y2="20"></line>
                <line x1="8.12" y1="8.12" x2="12" y2="12"></line>
              </svg>
            )}
            <h3 class="text-xl font-semibold">{service.name}</h3>
            <p class="text-gray-600 mt-2">Starting at {service.price}</p>
            <a 
              href={service.url} 
              class="inline-flex items-center mt-4 text-salon-darkblue hover-underline"
              aria-label={service.linkText}
            >
              {service.linkText}
              <svg class="h-4 w-4 ml-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </a>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/services" class="btn-primary">
          View All Services
        </a>
      </div>
    </div>
  </section>
  
  <!-- About Preview Section -->
  <section class="relative section-padding overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('/images/optimized/hero-background_1920q80.webp'); background-size: cover; background-position: center; filter: blur(3px);"></div>
    </div>
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-[#D3E4FD]/90 via-white/95 to-[#FFDEE2]/90"></div>
    <div class="container-custom relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1 animate-fade-in">
          <h2 class="text-4xl font-bold">About Melissa</h2>
          <p class="text-gray-700 mt-4">
            With 5 years of experience in the hair industry, Melissa has built a reputation for creating beautiful, personalized hair transformations. Specializing in color techniques and keratin treatments, her passion for helping clients look and feel their best shines through in every appointment.
          </p>
          <p class="text-gray-700 mt-4">
            Using only premium products and staying at the forefront of industry trends, Melissa ensures that each client receives a bespoke service tailored to their unique hair type, face shape, and lifestyle.
          </p>
          <a href="/about" class="btn-primary inline-block mt-6">
            Learn More About Us
          </a>
        </div>
        
        <div class="order-1 lg:order-2">
          <div class="relative">
            <img
              src="/images/optimized/hair-care-general_800.webp"
              alt="Melissa working on client's hair"
              class="rounded-lg shadow-xl w-full h-auto object-cover"
            />
            <div class="absolute -bottom-6 -right-6 bg-white p-4 rounded-lg shadow-lg">
              <div class="flex items-center">
                <svg class="h-8 w-8 text-[#1EAEDB] mr-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="8" r="6"></circle>
                  <path d="M15.477 12.89 17 22l-5-3-5 3 1.523-9.11"></path>
                </svg>
                <div>
                  <p class="font-semibold">Qualified</p>
                  <p class="text-sm text-gray-600">Color Specialist</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Local Community Integration Section - Critical for GEO 2024 -->
  <section class="py-16 bg-gradient-to-br from-green-50 to-blue-50">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-8">
          <span class="gradient-text">Kaukapakapa's</span> Premier Hair Destination
        </h2>
        <p class="text-xl text-gray-700 mb-12">
          Proudly serving the North Auckland communities of Kaukapakapa, Helensville, Wainui, and Waitoki with expert hair care in our peaceful village setting.
        </p>
        
        <!-- Local Entity Signals for Geographic Relevance -->
        <div class="grid md:grid-cols-4 gap-8 mb-12">
          <div class="text-center" itemscope itemtype="https://schema.org/Place">
            <h3 class="font-bold text-lg mb-2" itemprop="name">Kaukapakapa</h3>
            <p class="text-gray-600" itemprop="description">Main salon location in village center</p>
            <span class="text-sm text-[#1EAEDB] font-medium">📍 Primary Location</span>
          </div>
          <div class="text-center" itemscope itemtype="https://schema.org/Place">
            <h3 class="font-bold text-lg mb-2" itemprop="name">Helensville</h3>
            <p class="text-gray-600" itemprop="description">15 minutes from our salon</p>
            <span class="text-sm text-[#1EAEDB] font-medium">🚗 Service Area</span>
          </div>
          <div class="text-center" itemscope itemtype="https://schema.org/Place">
            <h3 class="font-bold text-lg mb-2" itemprop="name">Wainui</h3>
            <p class="text-gray-600" itemprop="description">Local village hair care specialist</p>
            <span class="text-sm text-[#1EAEDB] font-medium">🏡 Your Local Community</span>
          </div>
          <div class="text-center" itemscope itemtype="https://schema.org/Place">
            <h3 class="font-bold text-lg mb-2" itemprop="name">Waitoki</h3>
            <p class="text-gray-600" itemprop="description">Rural lifestyle hair solutions</p>
            <span class="text-sm text-[#1EAEDB] font-medium">🐴 Equestrian Area</span>
          </div>
        </div>
        
        <!-- Voice Search FAQ Integration -->
        <div class="bg-white rounded-xl shadow-lg p-8" itemscope itemtype="https://schema.org/FAQPage">
          <h3 class="text-2xl font-bold mb-6">Frequently Asked Questions</h3>
          <div class="grid md:grid-cols-2 gap-6 text-left">
            <div itemscope itemtype="https://schema.org/Question">
              <h4 class="font-semibold mb-2" itemprop="name">What's the best hair salon near me in North Auckland?</h4>
              <div itemscope itemtype="https://schema.org/Answer" itemprop="acceptedAnswer">
                <p class="text-gray-700" itemprop="text">Hair By Melissa in Kaukapakapa village offers premium hair services including keratin treatments ($180), balayage ($230), and expert cuts ($50) with free parking and a peaceful village atmosphere.</p>
              </div>
            </div>
            <div itemscope itemtype="https://schema.org/Question">
              <h4 class="font-semibold mb-2" itemprop="name">Where can I get keratin treatment near Helensville?</h4>
              <div itemscope itemtype="https://schema.org/Answer" itemprop="acceptedAnswer">
                <p class="text-gray-700" itemprop="text">Hair By Melissa, located 15 minutes from Helensville in Kaukapakapa, specializes in formaldehyde-free keratin treatments that last 3-5 months, perfect for North Auckland's coastal climate.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Testimonials Section -->
  <section class="bg-white section-padding">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-4xl font-bold">What Our Clients Say</h2>
        <p class="text-gray-600 mt-4">
          Hear from our wonderful clients about their experiences at Hair By Melissa.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {reviews.map((review) => (
          <div 
            class="glass-card rounded-lg p-8 animate-scale"
            style={`animation-delay: ${review.id * 100}ms`}
          >
            <div class="flex mb-4">
              {[...Array(review.rating)].map((_) => (
                <svg class="h-5 w-5 text-yellow-500 fill-current" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                </svg>
              ))}
            </div>
            <p class="text-gray-700 italic">"{review.review}"</p>
            <p class="font-medium mt-4">- {review.name}</p>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/gallery" class="btn-primary">
          View Our Work
        </a>
      </div>
    </div>
  </section>
  
  <!-- Gallery Preview -->
  <section class="section-padding bg-[#FFDEE2] bg-opacity-20">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-4xl font-bold">Our Gallery</h2>
        <p class="text-gray-600 mt-4">
          Browse through some of our stunning transformations and get inspired for your next visit.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {galleryImages.map((image, index) => (
          <div class="relative overflow-hidden rounded-lg group animate-fade-in" style={`animation-delay: ${index * 100}ms`}>
            <OptimizedImage
              src={image.src}
              alt={image.alt}
              width={455}
              height={256}
              loading={index < 2 ? "eager" : "lazy"}
              priority={index < 2}
              sizes="(max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
              class="w-full h-64 object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center pb-4">
              <span class="text-white font-medium">View Details</span>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/gallery" class="btn-primary">
          View Full Gallery
        </a>
      </div>
    </div>
  </section>
  
  <!-- Booking CTA -->
  <section class="relative section-padding">
    <div class="absolute inset-0 z-0">
      <div class="relative h-full w-full">
        <picture>
          <source 
            media="(max-width: 768px)" 
            srcset="/images/optimized/balayage-transformation_800q25.webp"
          />
          <source 
            media="(max-width: 1280px)" 
            srcset="/images/optimized/balayage-transformation_1280q30.webp"
          />
          <img
            src="/images/optimized/balayage-transformation_1920q35.webp"
            alt="Professional balayage hair transformation showcasing Hair By Melissa's expertise"
            class="h-full w-full object-cover"
            loading="lazy"
          />
        </picture>
        <div class="absolute inset-0 bg-black bg-opacity-60"></div>
      </div>
    </div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-3xl mx-auto text-center text-white">
        <h2 class="text-4xl font-bold">Ready for a Transformation?</h2>
        <p class="text-xl mt-4">
          Book your appointment today and experience the Hair By Melissa difference.
        </p>
        <div class="mt-8 flex justify-center">
          <a href="/booking" class="btn-primary inline-flex items-center">
            <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            Book Your Appointment
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Indicators Section -->
  <section class="py-16 bg-white overflow-hidden">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <h2 class="text-3xl font-bold">Why Choose Hair By Melissa</h2>
        <p class="text-gray-600 mt-4">
          Professional expertise you can trust for all your hair care needs
        </p>
      </div>
      <div class="max-w-4xl mx-auto">
        <TrustSignals variant="grid" showCertification={true} />
      </div>
    </div>
  </section>
  
  <!-- Internal Hub Links Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-white to-[#D3E4FD]/10 overflow-hidden">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-4xl font-bold text-gray-900">Explore Hair By Melissa</h2>
        <p class="text-xl text-gray-600 mt-4">
          Discover our comprehensive range of services, locations we serve, and expert hair care advice to help you achieve your perfect look.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Keratin Treatments -->
        <div class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[#1EAEDB]/30">
          <div class="h-48 bg-gradient-to-br from-[#1EAEDB]/20 to-[#0891B2]/10 relative overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center">
              <svg class="w-16 h-16 text-[#1EAEDB] group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"></path>
              </svg>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              <a href="/services/keratin-treatments" class="text-[#1EAEDB] hover:text-[#0F7A9C] transition-colors">
                Keratin Treatments
              </a>
            </h3>
            <p class="text-gray-600 mb-4">
              Transform frizzy hair into smooth, manageable locks with our professional $180 keratin treatments. Perfect for North Auckland's coastal climate.
            </p>
            <a href="/services/keratin-treatments" class="inline-flex items-center text-sm font-medium text-[#1EAEDB] hover:text-[#0F7A9C] transition-colors group">
              Learn About Keratin 
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Balayage Services -->
        <div class="group bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden border border-gray-100 hover:border-[#1EAEDB]/30">
          <div class="h-48 bg-gradient-to-br from-[#FFDEE2]/30 to-[#D3E4FD]/20 relative overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center">
              <svg class="w-16 h-16 text-[#1EAEDB] group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM7 3H5a2 2 0 00-2 2v12a4 4 0 004 4h2V3z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 3h2a2 2 0 012 2v12a4 4 0 01-4 4h-2V3z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 21a4 4 0 004-4V5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4z"></path>
              </svg>
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              <a href="/services/balayage" class="text-[#1EAEDB] hover:text-[#0F7A9C] transition-colors">
                Balayage Coloring
              </a>
            </h3>
            <p class="text-gray-600 mb-4">
              Hand-painted highlights for natural sun-kissed hair. Our $230 balayage service creates effortless beauty with low maintenance requirements.
            </p>
            <a href="/services/balayage" class="inline-flex items-center text-sm font-medium text-[#1EAEDB] hover:text-[#0F7A9C] transition-colors group">
              Discover Balayage 
              <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
