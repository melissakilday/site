---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Contact Hair By Melissa | Book Appointment Kaukapakapa";
const pageDescription = "Contact Hair By Melissa in Kaukapakapa for appointments. Premium hair salon on Magnolia Lane serving Helensville, Wainui & Waitoki. Book keratin treatments, balayage & cuts.";
const pageKeywords = "contact hair salon kaukapakapa, book hairdresser helensville, hair appointment wainui, melissa contact waitoki, magnolia lane kaukapakapa salon";

const businessHours = [
  { day: "Monday", hours: "9:00 AM - 5:00 PM" },
  { day: "Tuesday", hours: "9:00 AM - 5:00 PM" },
  { day: "Wednesday", hours: "9:00 AM - 5:00 PM" },
  { day: "Thursday", hours: "9:00 AM - 7:00 PM" },
  { day: "Friday", hours: "9:00 AM - 5:00 PM" },
  { day: "Saturday", hours: "9:00 AM - 3:00 PM" },
  { day: "Sunday", hours: "Closed" }
];
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <!-- Background Layer -->
    <div 
      class="absolute inset-0"
      style="background-image: url('/images/optimized/professional-blowdry_800.webp'); background-size: cover; background-position: center; background-repeat: no-repeat;"
    ></div>
    
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/60"></div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold text-white leading-tight">
          Contact Hair Salon in Kaukapakapa
        </h1>
        <p class="text-xl text-white mt-6">
          Book your hair appointment at our Kaukapakapa salon. Serving North Auckland including Helensville, Wainui & Waitoki areas.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info & Form Section -->
  <section class="bg-white py-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Contact Information</h2>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-start">
              <svg class="h-6 w-6 text-[#1EAEDB] mr-4 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Salon Location</h3>
                <p class="text-gray-700">Magnolia Lane, Kaukapakapa</p>
                <p class="text-gray-700">Rural Auckland, New Zealand</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="h-6 w-6 text-[#1EAEDB] mr-4 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Phone</h3>
                <p class="text-gray-700">
                  <a href="tel:0275201613" class="hover:text-[#1EAEDB] transition-colors">027 520 1613</a>
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="h-6 w-6 text-[#1EAEDB] mr-4 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                <path d="m22 7-10 5L2 7"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Email</h3>
                <p class="text-gray-700">
                  <a href="mailto:melissa@hairbymelissa.co.nz" class="hover:text-[#1EAEDB] transition-colors">melissa@hairbymelissa.co.nz</a>
                </p>
              </div>
            </div>
            
            <div class="flex items-start">
              <svg class="h-6 w-6 text-[#1EAEDB] mr-4 mt-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 6v6l4 2"></path>
              </svg>
              <div>
                <h3 class="font-semibold mb-1">Business Hours</h3>
                <div class="space-y-1">
                  {businessHours.map((schedule) => (
                    <div class="flex justify-between text-gray-700">
                      <span>{schedule.day}</span>
                      <span class={schedule.hours === "Closed" ? "text-red-500" : ""}>{schedule.hours}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="bg-[#F8F9FA] rounded-lg p-6">
            <h3 class="font-semibold mb-4">Follow Us</h3>
            <div class="flex gap-4">
              <a href="#" class="group">
                <div class="bg-white rounded-full p-3 shadow-md group-hover:shadow-lg transition-shadow duration-300">
                  <svg class="h-6 w-6 text-[#1EAEDB]" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </div>
              </a>
              <a href="#" class="group">
                <div class="bg-white rounded-full p-3 shadow-md group-hover:shadow-lg transition-shadow duration-300">
                  <svg class="h-6 w-6 text-[#1EAEDB]" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </div>
              </a>
              <a href="#" class="group">
                <div class="bg-white rounded-full p-3 shadow-md group-hover:shadow-lg transition-shadow duration-300">
                  <svg class="h-6 w-6 text-[#1EAEDB]" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-bold mb-8">Send Us a Message</h2>
          
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <p class="text-blue-800 text-sm">
              <strong>Response Time:</strong> I typically respond to messages within 1-2 business days. For urgent appointments, please call directly at 027 520 1613.
            </p>
          </div>
          
          <!-- Embedded Form -->
          <div id="contact-form-container" class="bg-white rounded-lg">
            <iframe
              src="https://api.leadconnectorhq.com/widget/form/EfCZIIMh2EZjccykdCeV"
              style="width:100%;height:663px;border:none;border-radius:8px"
              id="contact-form-EfCZIIMh2EZjccykdCeV"
              data-layout="{'id':'INLINE'}"
              data-trigger-type="alwaysShow"
              data-trigger-value=""
              data-activation-type="alwaysActivated"
              data-activation-value=""
              data-deactivation-type="neverDeactivate"
              data-deactivation-value=""
              data-form-name="Contact Form"
              data-height="663"
              data-layout-iframe-id="contact-form-EfCZIIMh2EZjccykdCeV"
              data-form-id="EfCZIIMh2EZjccykdCeV"
              title="Contact Form"
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-[#F8F9FA] py-20">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Find Us in Kaukapakapa</h2>
        <p class="text-gray-700">Easy to find, with ample parking available</p>
      </div>
      
      <div class="rounded-lg overflow-hidden shadow-xl h-96">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d51188.31438193855!2d174.48289783973983!3d-36.61726962066159!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6d0ccd0a6cb14ae1%3A0x500ef6143a31611!2sKaukapakapa%2C%20Auckland%2C%20New%20Zealand!5e0!3m2!1sen!2sus!4v1712885742714!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Hair By Melissa Location Map"
        ></iframe>
      </div>
      
      <div class="mt-8 text-center">
        <a 
          href="https://www.google.com/maps/dir//Kaukapakapa,+Auckland,+New+Zealand"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary"
        >
          Get Directions
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-white py-20">
    <div class="container-custom text-center">
      <h2 class="text-4xl font-bold mb-6">Prefer to Book Online?</h2>
      <p class="text-xl text-gray-700 mb-8 max-w-2xl mx-auto">
        Skip the phone call and book your appointment directly through our online booking system
      </p>
      <a href="/booking" class="btn-primary">Book Appointment</a>
    </div>
  </section>
</Layout>

<script src="https://link.msgsndr.com/js/form_embed.js"></script>