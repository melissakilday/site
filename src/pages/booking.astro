---
import Layout from '../layouts/Layout.astro';
import TrustSignals from '../components/TrustSignals.astro';

const pageTitle = "Book Hair Appointment Kaukapakapa | Online Booking";
const pageDescription = "Book your hair appointment online at Hair By Melissa Kaukapakapa. Online booking for keratin treatments, balayage, highlights & cuts. Serving Helensville, Wainui & Waitoki.";
const pageKeywords = "book hairdresser kaukapakapa, hair appointment helensville, online booking wainui, salon booking waitoki, book keratin treatment north auckland";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden">
    <!-- Background Layer -->
    <div class="absolute inset-0 hero-bg-booking"></div>
    
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/50"></div>
    
    <div class="container-custom relative z-10">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold text-white leading-tight">
          Book Hair Appointment in Kaukapakapa
        </h1>
        <p class="text-xl text-white mt-6">
          Schedule your hair appointment online at our Kaukapakapa salon. We serve clients from Helensville, Wainui, Waitoki and surrounding North Auckland areas.
        </p>
      </div>
    </div>
  </section>

  <!-- Booking Widget Section -->
  <section class="bg-white py-16">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto">
        <!-- Booking Instructions -->
        <div class="mb-8 text-center">
          <h2 class="text-3xl font-bold mb-4">Easy Online Booking</h2>
          <p class="text-gray-700 mb-4">
            Select your desired service, choose an available time slot, and we'll see you soon!
          </p>
          
          <!-- Trust Signals -->
          <div class="mb-6">
            <TrustSignals variant="compact" showExperience={true} showGuarantee={true} showProducts={false} showCertification={false} />
          </div>
          
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 max-w-2xl mx-auto">
            <p class="text-blue-800 text-sm">
              <strong>Booking Confirmation:</strong> After submitting your booking request, I'll confirm your appointment within 1-2 business days via phone or email. For same-day appointments, please call 027 520 1613.
            </p>
          </div>
        </div>

        <!-- LeadConnector Booking Widget -->
        <div class="booking-widget-container">
          <iframe 
            src="https://api.leadconnectorhq.com/widget/service-menu/67fe3af34e4a6b61c1bc9563"
            class="booking-iframe"
            frameborder="0"
            scrolling="yes"
            style="width: 100%; height: 800px; border: none; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <!-- Information Sections -->
  <section class="bg-[#F8F9FA] py-16">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- What to Expect -->
        <div class="bg-white rounded-lg p-8 shadow-lg">
          <div class="flex items-center mb-4">
            <svg class="h-8 w-8 text-[#1EAEDB] mr-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
            <h3 class="text-xl font-semibold">What to Expect</h3>
          </div>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>A warm welcome and complimentary consultation</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Discussion of your hair goals and expectations</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Professional service in a relaxing environment</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Personalized aftercare recommendations</span>
            </li>
          </ul>
        </div>

        <!-- Preparation Tips -->
        <div class="bg-white rounded-lg p-8 shadow-lg">
          <div class="flex items-center mb-4">
            <svg class="h-8 w-8 text-[#1EAEDB] mr-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
            <h3 class="text-xl font-semibold">Preparation Tips</h3>
          </div>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Arrive with clean, dry hair for color services</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Bring inspiration photos if you have them</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Allow extra time for your first visit</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Inform us of any allergies or sensitivities</span>
            </li>
          </ul>
        </div>

        <!-- Cancellation Policy -->
        <div class="bg-white rounded-lg p-8 shadow-lg">
          <div class="flex items-center mb-4">
            <svg class="h-8 w-8 text-[#1EAEDB] mr-3" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
            </svg>
            <h3 class="text-xl font-semibold">Cancellation Policy</h3>
          </div>
          <ul class="space-y-3 text-gray-700">
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Please provide 24 hours notice for cancellations</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Late cancellations may incur a fee</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>We understand emergencies happen</span>
            </li>
            <li class="flex items-start">
              <span class="text-[#1EAEDB] mr-2">•</span>
              <span>Contact us directly if you need to reschedule</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="bg-white py-16">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Need Help Booking?</h2>
        <p class="text-gray-700 mb-8">
          If you have any questions or need assistance with booking, don't hesitate to reach out to us directly.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+64275201613" class="btn-primary inline-flex items-center justify-center">
            <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            Call Now
          </a>
          <a href="/contact" class="btn-secondary inline-flex items-center justify-center">
            <svg class="h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Form Embed Script -->
  <script src="https://link.msgsndr.com/js/form_embed.js"></script>
</Layout>

<style>
  .hero-bg-booking {
    background-image: url('/images/optimized/salon-exterior_800.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .booking-widget-container {
    border-radius: 0.5rem;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .booking-iframe {
      height: 600px !important;
    }
  }
</style>