// Services specifically beneficial for village lifestyle
const wainuiServices = [
  {
    name: "Keratin Treatments",
    price: "$180",
    description: "Ultimate protection against humidity and environmental factors",
    duration: "2-3 hours",
    villageBenefit: "Protects against humidity and prevents frizz in rural conditions",
    popular: true
  },
  {
    name: "Balayage",
    price: "$230", 
    description: "Natural sun-kissed looks perfect for village living",
    duration: "3-4 hours",
    villageBenefit: "Natural highlights that complement an active village lifestyle",
    popular: true
  },
  {
    name: "UV Protection Treatments",
    price: "$40",
    description: "Shield your hair from intense UV exposure",
    duration: "30 min",
    villageBenefit: "Prevents sun damage and color fading from outdoor activities",
    popular: false
  },
  {
    name: "Deep Conditioning Treatments",
    price: "$60",
    description: "Intensive moisture restoration for healthy hair",
    duration: "45 min",
    villageBenefit: "Restores moisture and vitality for active village residents",
    popular: true
  }
];

// Village-specific hair care tips
const villageHairTips = [
  {
    season: "Summer",
    tip: "Apply leave-in UV protectant before outdoor activities",
    reason: "Wainui's intense summer sun can damage unprotected hair"
  },
  {
    season: "Year-round",
    tip: "Regular deep conditioning maintains healthy hair",
    reason: "Keeps hair strong and resilient against environmental factors"
  },
  {
    season: "Winter",
    tip: "Weekly deep conditioning for active lifestyles",
    reason: "Outdoor activities and weather exposure require extra moisture"
  },
  {
    season: "Spring",
    tip: "Consider protective styles for windy days",
    reason: "Wainui's spring winds can cause tangles and breakage"
