const pageDescription = "Expert hair specialists serving Wainui village residents. Professional hair care, UV protection, and styling treatments. Expert keratin & color services 20 minutes from Wainui Village.";
const pageKeywords = "hair salon wainui, hairdresser wainui, hair coloring wainui, keratin treatment wainui, balayage wainui, highlights wainui, hair salon near wainui, village hair care";

const faqs = locationFAQs['wainui'];

// Local business schema for Wainui service area
