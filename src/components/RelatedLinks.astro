---
export interface RelatedLink {
  title: string;
  url: string;
  description: string;
  category: 'service' | 'location' | 'blog' | 'page';
}

export interface Props {
  links: RelatedLink[];
  title?: string;
  className?: string;
}

const { links, title = "Related Content", className = "" } = Astro.props;
---

<section class={`py-12 bg-gray-50 ${className}`}>
  <div class="container-custom">
    <h3 class="text-2xl font-bold text-gray-900 text-center mb-8">{title}</h3>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {links.map((link) => (
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow p-6 group">
          <div class="flex items-start justify-between mb-3">
            <div class="flex-1">
              <span class={`inline-block px-2 py-1 rounded-full text-xs font-medium mb-2 ${
                link.category === 'service' ? 'bg-blue-100 text-blue-800' :
                link.category === 'location' ? 'bg-green-100 text-green-800' :
                link.category === 'blog' ? 'bg-purple-100 text-purple-800' :
                'bg-gray-100 text-gray-800'
              }`}>
                {link.category.charAt(0).toUpperCase() + link.category.slice(1)}
              </span>
              
              <h4 class="font-semibold text-gray-900 group-hover:text-salon-darkblue transition-colors leading-tight">
                <a href={link.url} class="stretched-link">
                  {link.title}
                </a>
              </h4>
            </div>
            
            <svg class="h-4 w-4 text-salon-darkblue group-hover:translate-x-1 transition-transform" 
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M9 5l7 7-7 7"/>
            </svg>
          </div>
          
          <p class="text-sm text-gray-600 leading-relaxed">
            {link.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .stretched-link::after {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1;
    content: "";
  }
</style>